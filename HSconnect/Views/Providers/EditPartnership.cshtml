@model HSconnect.Models.Partnership

@{
    ViewData["Title"] = "EditPartnership";
    Layout = "~/Views/Shared/_Layout_Provider.cshtml";
}

<h1>Edit Partnership</h1>

<h4>Partnership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPartnership">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label"></label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagedCareOrganizationId" class="control-label"></label>
                <select asp-for="ManagedCareOrganizationId" class="form-control" asp-items="ViewBag.ManagedCareOrganizationId"></select>
                <span asp-validation-for="ManagedCareOrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayPartnerships">Return to Partnerships</a>
</div>

