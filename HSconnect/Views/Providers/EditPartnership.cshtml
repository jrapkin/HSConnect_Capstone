@model HSconnect.Models.PartnershipViewModel

@{
    ViewData["Title"] = "EditPartnership";
    Layout = "~/Views/Shared/_Layout_Provider.cshtml";
}

<h1>Edit Partnership</h1>

<h4>Partnership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPartnership">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PartnershipId" />
                <label asp-for="ManagedCareOrganizationSelectionId" class="control-label"></label>
                <select asp-for="ManagedCareOrganizationSelectionId" class="form-control" asp-items='new SelectList(Model.ManagedCareOrganizations, "Id", "Name")'></select>
                <span asp-validation-for="ManagedCareOrganizationSelectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayPartnerships">Return to Partnerships</a>
</div>

