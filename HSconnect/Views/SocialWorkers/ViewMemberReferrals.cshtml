@model IEnumerable<HSconnect.Models.Chart>
@{
    ViewData["Title"] = "ViewMemberReferrals";
    Layout = "~/Views/Shared/_Layout_SocialWorker.cshtml";
}

<h1>Member Referrals</h1>
@foreach (var item in Model)
{

<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => item.Member.Name)
    </dd>
</dl>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => item.SocialWorker.FirstName) @Html.DisplayFor(model => item.SocialWorker.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.SocialWorker.FirstName) @Html.DisplayFor(model => item.SocialWorker.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => item.ServiceOffered.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.ServiceOffered.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => item.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.Date)
        </dd>
        <dt class="col-sm-2">
            <p>Member Status</p>
        </dt>
        @if (item.ServiceIsActive)
        {
            <dd class="col-sm-10">
                <p>Active Member.</p>
            </dd>
        }
        @if (item.ServiceIsActive == false)
        {
            <dd class="col-sm-10">
                <p>Not an active Member.</p>
            </dd>
        }
        <dt class="col-sm-2">
            <p>Referral Status</p>
        </dt>
        @if (item.ReferralAccepted == true)
        {
            <dd class="col-sm-10">
                <p>Accepted</p>
            </dd>
        }
        @if (item.ReferralAccepted == false)
        {
            <dd class="col-sm-10">
                <p>Denied</p>
            </dd>
        }
        @if (item.ReferralAccepted == null)
        {
            <dd class="col-sm-10">
                <p>Pending</p>
            </dd>
        }
    </dl>
</div>
}


