@model HSconnect.Models.Chart

@{
    ViewData["Title"] = "Create Referral";
    Layout = "~/Views/Shared/_Layout_SocialWorker.cshtml";
}

<h1>Create New Referral</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReferral">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceOfferedId" class="form-control" />
            <input type="hidden" asp-for="SocialWorkerId" class="form-control" />
            <input type="hidden" asp-for="ReferralAccepted" class="form-control" />
            <h2> @Model.ServiceOffered.Service.Name</h2>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ServiceIsActive" /> @Html.DisplayNameFor(model => model.ServiceIsActive)
                </label>
            </div>
            <label class="control-label"> Member</label>
            <select asp-for="MemberId" class="form-control" asp-items=ViewBag.Members></select>
            <span asp-validation-for="MemberId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

